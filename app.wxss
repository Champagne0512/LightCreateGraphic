/** 轻创图文 - 独特视觉风格系统 **/

/* === 色彩系统 === */
:root {
  --primary-gradient: linear-gradient(135deg, #8B5CF6 0%, #3B82F6 100%);
  --accent-color: #FF6B6B;
  --creative-blue: #4F46E5;
  --creative-purple: #8B5CF6;
  --creative-orange: #F59E0B;
  --creative-green: #10B981;
  --creative-red: #EF4444;
  --bg-light: #F8FAFC;
  --bg-card: #FFFFFF;
  --text-primary: #1F2937;
  --text-secondary: #6B7280;
  --border-light: #E5E7EB;
  --shadow-creative: 0 8rpx 32rpx rgba(139, 92, 246, 0.12);
  --shadow-card: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

/* === 基础样式 === */
page {
  background: var(--bg-light);
  color: var(--text-primary);
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', sans-serif;
}

/* === 按钮样式 === */
.btn-primary {
  background: var(--primary-gradient);
  color: #fff;
  border-radius: 12rpx;
  border: none;
  font-weight: 600;
  box-shadow: var(--shadow-creative);
  transition: all 0.3s ease;
}

.btn-primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(139, 92, 246, 0.2);
}

.btn-secondary {
  background: var(--bg-card);
  color: var(--creative-blue);
  border: 2rpx solid var(--creative-blue);
  border-radius: 12rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.btn-secondary:active {
  background: var(--creative-blue);
  color: white;
}

/* === 卡片样式 === */
.card {
  background: var(--bg-card);
  border-radius: 16rpx;
  box-shadow: var(--shadow-card);
  border: 1rpx solid var(--border-light);
  overflow: hidden;
  transition: all 0.3s ease;
}

.card:active {
  transform: translateY(-2rpx);
  box-shadow: var(--shadow-creative);
}

/* === 工具条样式 === */
.toolbar {
  position: fixed;
  left: 0; right: 0; bottom: 0;
  background: var(--bg-card);
  border-top: 1rpx solid var(--border-light);
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
  backdrop-filter: blur(10rpx);
}

/* === 标题样式 === */
.section-title {
  font-size: 32rpx;
  font-weight: 700;
  margin: 32rpx 0 16rpx;
  color: var(--text-primary);
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 24rpx;
  background: var(--primary-gradient);
  border-radius: 3rpx;
}

/* === 创意元素 === */
.creative-badge {
  background: var(--primary-gradient);
  color: white;
  padding: 6rpx 12rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 600;
  display: inline-block;
}

.creative-tag {
  background: rgba(139, 92, 246, 0.1);
  color: var(--creative-purple);
  padding: 4rpx 10rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  border: 1rpx solid rgba(139, 92, 246, 0.2);
}

/* === 加载动画 === */
@keyframes creative-pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.7; }
}

.loading-pulse {
  animation: creative-pulse 2s infinite;
}

/* === 响应式设计 === */
@media (max-width: 750rpx) {
  .card {
    border-radius: 12rpx;
  }
  
  .section-title {
    font-size: 28rpx;
  }
}

