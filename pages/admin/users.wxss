.users {
  padding: 20rpx;
}

.search-bar {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  gap: 20rpx;
}

.search-input {
  flex: 1;
  height: 80rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.filter-picker {
  width: 200rpx;
  height: 80rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
}

.picker-value {
  color: #666;
}

.user-list {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.user-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.user-info {
  flex: 1;
}

.user-name {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.user-email {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 6rpx;
}

.user-register-time {
  display: block;
  font-size: 22rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.user-status {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.user-status.active {
  background: #e6f7ff;
  color: #1890ff;
}

.user-status.inactive {
  background: #f5f5f5;
  color: #999;
}

.user-actions {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.action-btn {
  padding: 12rpx 20rpx;
  border: none;
  border-radius: 8rpx;
  font-size: 24rpx;
  min-width: 80rpx;
}

.action-btn.view {
  background: #1890ff;
  color: white;
}

.action-btn.enable {
  background: #52c41a;
  color: white;
}

.action-btn.disable {
  background: #faad14;
  color: white;
}

.action-btn.delete {
  background: #ff4d4f;
  color: white;
}

.empty-state {
  text-align: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background: white;
  width: 80%;
  border-radius: 16rpx;
  padding: 40rpx;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  text-align: center;
}

.user-detail {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.detail-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}

.detail-info {
  flex: 1;
}

.detail-name {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.detail-email, .detail-register, .detail-status, .detail-template-count, .detail-last-login {
  display: block;
  font-size: 24rpx;
  margin-bottom: 6rpx;
  color: #666;
}

.detail-status.active {
  color: #52c41a;
}

.detail-status.inactive {
  color: #faad14;
}

.form-actions {
  display: flex;
  justify-content: center;
  margin-top: 40rpx;
}

.btn {
  padding: 20rpx 40rpx;
  border: none;
  border-radius: 8rpx;
  font-size: 28rpx;
  min-width: 120rpx;
}

.btn.close {
  background: #1677FF;
  color: white;
}