<view class="container">
  <!-- 顶部品牌与主 CTA -->
  <view class="hero-section">
    <view class="hero-content">
      <view class="brand-area">
        <view class="logo-wrapper"><text class="logo-icon">🎨</text></view>
        <view class="brand-info">
          <text class="app-name">轻创图文</text>
          <text class="app-tagline">专业设计，简单创作</text>
        </view>
      </view>

      <view class="cta-section">
        <view class="cta-header">
          <text class="cta-title">开启你的创意之旅</text>
          <text class="cta-subtitle">选择适合你的创作方式</text>
        </view>
        <view class="primary-actions">
          <button class="primary-cta main-cta" bindtap="createBlank">
            <view class="cta-icon-wrapper"><text class="cta-icon">✏️</text></view>
            <view class="cta-content">
              <text class="cta-text">立即创作</text>
              <text class="cta-subtitle">从空白开始，自由设计</text>
            </view>
            <text class="cta-arrow">→</text>
          </button>

          <view class="secondary-actions">
            <button class="secondary-cta" bindtap="openTemplates"><text class="cta-icon">📋</text><text class="cta-text">模板创作</text></button>
            <button class="secondary-cta" bindtap="openDrafts"><text class="cta-icon">📝</text><text class="cta-text">继续编辑</text></button>
          </view>
        </view>
      </view>
    </view>
  </view>

  <!-- 登录/注册入口模块 -->
  <view class="auth-section">
    <view wx:if="{{!loggedIn}}" class="auth-card">
      <text class="auth-title">登录解锁云端草稿与作品同步</text>
      <view class="auth-actions">
        <button class="btn-primary" bindtap="goLogin">登录</button>
        <button class="btn-secondary" bindtap="goRegister">注册</button>
      </view>
    </view>
    <view wx:elif="{{loggedIn}}" class="auth-card">
      <text class="auth-title">欢迎回来，{{userName || '用户'}}</text>
      <view class="auth-actions">
        <button class="btn-secondary" bindtap="openProfile">前往个人中心</button>
        <button class="btn-secondary danger" bindtap="logoutFromHome">退出登录</button>
      </view>
    </view>
  </view>

  <!-- 搜索区（保留） -->
  <view class="search-section">
    <view class="search-container">
      <view class="search-header">
        <text class="search-title">快速找到合适的设计模板</text>
        <text class="search-subtitle">输入关键词或选择热门分类</text>
      </view>
      <view class="search-area">
        <view class="search-input-wrapper">
          <text class="search-icon">🔍</text>
          <input class="search-input" placeholder="搜索设计模板，如：海报、社交媒体、电商主图…" bindinput="onSearchInput" value="{{keyword}}" />
          <button class="search-btn" bindtap="onSearch"><text class="btn-text">搜索</text></button>
        </view>
      </view>
    </view>
  </view>
</view>