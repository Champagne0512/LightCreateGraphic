/* === 首页 - 创意设计风格 === */

.container { 
  padding: 0; 
  background: var(--bg-light);
}

/* 头部区域 */
.hero-section {
  position: relative;
  overflow: hidden;
}

.hero-gradient {
  background: linear-gradient(135deg, #8B5CF6 0%, #3B82F6 50%, #06B6D4 100%);
  padding: 60rpx 32rpx 40rpx;
  position: relative;
}

.hero-gradient::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="20" cy="20" r="1" fill="white" opacity="0.1"/><circle cx="80" cy="40" r="1" fill="white" opacity="0.1"/><circle cx="40" cy="80" r="1" fill="white" opacity="0.1"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
  opacity: 0.3;
}

.hero-content {
  position: relative;
  z-index: 2;
  text-align: center;
  color: white;
}

.brand-logo {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.logo-icon {
  font-size: 48rpx;
}

.logo-text {
  font-size: 48rpx;
  font-weight: 800;
  letter-spacing: 2rpx;
}

.hero-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 32rpx;
}

.hero-stats {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 24rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-number {
  font-size: 36rpx;
  font-weight: 700;
  margin-bottom: 4rpx;
}

.stat-label {
  font-size: 22rpx;
  opacity: 0.8;
}

.stat-divider {
  width: 1rpx;
  height: 24rpx;
  background: rgba(255,255,255,0.3);
}

/* 搜索区域 */
.search-section {
  margin: -20rpx 24rpx 24rpx;
  padding: 32rpx;
  position: relative;
  z-index: 10;
}

.search-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.search-icon {
  font-size: 28rpx;
}

.search-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.search-input-group {
  display: flex;
  gap: 16rpx;
  align-items: center;
  margin-bottom: 16rpx;
}

.search-input {
  flex: 1;
  background: var(--bg-light);
  border: 2rpx solid var(--border-light);
  border-radius: 12rpx;
  padding: 16rpx 20rpx;
  font-size: 26rpx;
  transition: all 0.3s ease;
}

.search-input:focus {
  border-color: var(--creative-blue);
  box-shadow: 0 0 0 3rpx rgba(79, 70, 229, 0.1);
}

.search-btn {
  padding: 16rpx 24rpx;
  white-space: nowrap;
}

.search-tags {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag-label {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.search-tag {
  background: rgba(139, 92, 246, 0.1);
  color: var(--creative-purple);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  border: 1rpx solid rgba(139, 92, 246, 0.2);
  transition: all 0.3s ease;
}

.search-tag:active {
  background: var(--creative-purple);
  color: white;
}

/* 快速操作区域 */
.quick-actions {
  margin: 0 24rpx 32rpx;
  padding: 32rpx;
}

.actions-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.actions-icon {
  font-size: 28rpx;
}

.actions-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.actions-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 16rpx;
  background: var(--bg-light);
  border-radius: 12rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.action-item:active {
  border-color: var(--creative-blue);
  transform: translateY(-2rpx);
}

.action-icon {
  font-size: 40rpx;
  margin-bottom: 12rpx;
}

.action-text {
  font-size: 26rpx;
  font-weight: 600;
  margin-bottom: 4rpx;
}

.action-desc {
  font-size: 22rpx;
  color: var(--text-secondary);
}

/* 场景分类区域 */
.scene-section {
  margin: 0 24rpx 32rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-more {
  font-size: 24rpx;
  color: var(--creative-blue);
  font-weight: 600;
}

.scene-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.scene-card {
  padding: 24rpx;
  position: relative;
  overflow: hidden;
}

.scene-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: var(--primary-gradient);
}

.scene-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.scene-icon {
  font-size: 32rpx;
}

.scene-name {
  font-size: 26rpx;
  font-weight: 600;
}

.scene-count {
  font-size: 22rpx;
  color: var(--text-secondary);
  margin-bottom: 12rpx;
}

.scene-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.scene-tag {
  background: var(--bg-light);
  color: var(--text-secondary);
  padding: 4rpx 10rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
}

.scene-more {
  color: var(--creative-blue);
  font-size: 20rpx;
  font-weight: 600;
}

/* 推荐模板区域 */
.featured-section {
  margin: 0 24rpx 32rpx;
}

.featured-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.featured-card {
  overflow: hidden;
}

.template-preview {
  height: 160rpx;
  padding: 20rpx;
  position: relative;
  display: flex;
  align-items: flex-end;
}

.template-name {
  font-size: 24rpx;
  font-weight: 600;
  color: white;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.3);
}

.template-badge {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  background: rgba(255,255,255,0.9);
  padding: 4rpx 10rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 600;
}

.template-info {
  padding: 16rpx;
}

.template-desc {
  font-size: 22rpx;
  color: var(--text-secondary);
  margin-bottom: 12rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.template-stats {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.stat {
  font-size: 20rpx;
  color: var(--text-secondary);
}

/* 底部引导区域 */
.footer-section {
  margin: 0 24rpx 40rpx;
}

.footer-card {
  padding: 40rpx 32rpx;
  text-align: center;
  background: linear-gradient(135deg, var(--bg-card) 0%, #F8FAFC 100%);
}

.footer-title {
  font-size: 28rpx;
  font-weight: 700;
  margin-bottom: 12rpx;
  color: var(--text-primary);
}

.footer-desc {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-bottom: 24rpx;
}

.footer-btn {
  padding: 20rpx 40rpx;
  font-size: 26rpx;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .actions-grid {
    grid-template-columns: 1fr;
  }
  
  .scene-grid, .featured-grid {
    grid-template-columns: 1fr;
  }
}
