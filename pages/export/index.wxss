/* === 导出页面 - 专业预览风格 === */

.container {
  padding: 0;
  background: var(--bg-light);
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 头部区域 */
.export-header {
  background: var(--primary-gradient);
  padding: 60rpx 32rpx 40rpx;
  text-align: center;
  color: white;
  position: relative;
  overflow: hidden;
}

.export-header::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="20" cy="20" r="1" fill="white" opacity="0.1"/><circle cx="80" cy="40" r="1" fill="white" opacity="0.1"/><circle cx="40" cy="80" r="1" fill="white" opacity="0.1"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
  opacity: 0.3;
}

.export-title {
  font-size: 36rpx;
  font-weight: 800;
  margin-bottom: 8rpx;
  position: relative;
  z-index: 2;
}

.export-subtitle {
  font-size: 26rpx;
  opacity: 0.9;
  position: relative;
  z-index: 2;
}

/* 预览区域 */
.preview-section {
  flex: 1;
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.preview-card {
  background: var(--bg-card);
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: var(--shadow-creative);
  border: 1rpx solid var(--border-light);
  max-width: 600rpx;
  width: 100%;
  text-align: center;
  position: relative;
}

.preview-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: var(--primary-gradient);
  border-radius: 4rpx 4rpx 0 0;
}

.preview-label {
  font-size: 24rpx;
  font-weight: 600;
  color: var(--text-secondary);
  margin-bottom: 16rpx;
}

.preview-image {
  width: 100%;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.preview-image:active {
  transform: scale(0.98);
}

/* 云端状态 */
.cloud-status {
  margin-top: 20rpx;
  padding: 16rpx;
  background: rgba(16, 185, 129, 0.1);
  border-radius: 12rpx;
  border: 1rpx solid rgba(16, 185, 129, 0.2);
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.cloud-icon {
  font-size: 24rpx;
  color: var(--creative-green);
}

.cloud-text {
  font-size: 22rpx;
  color: var(--creative-green);
  font-weight: 600;
}

.cloud-url {
  font-size: 20rpx;
  color: var(--text-secondary);
  word-break: break-all;
}

/* 操作按钮区域 */
.actions-section {
  padding: 32rpx;
  background: var(--bg-card);
  border-top: 1rpx solid var(--border-light);
}

.actions-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.action-card {
  background: var(--bg-light);
  border-radius: 16rpx;
  padding: 24rpx;
  text-align: center;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.action-card:active {
  border-color: var(--creative-blue);
  transform: translateY(-2rpx);
  box-shadow: var(--shadow-card);
}

.action-icon {
  font-size: 48rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--primary-gradient);
  color: white;
}

.action-text {
  font-size: 24rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.action-desc {
  font-size: 20rpx;
  color: var(--text-secondary);
}

/* 分享按钮样式 */
.share-btn {
  background: linear-gradient(135deg, #3B82F6 0%, #1D4ED8 100%);
  color: white;
  border: none;
}

.share-btn:active {
  background: linear-gradient(135deg, #2563EB 0%, #1E40AF 100%);
}

/* 空状态 */
.empty-state {
  padding: 120rpx 32rpx;
  text-align: center;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-title {
  font-size: 28rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-bottom: 32rpx;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .actions-grid {
    grid-template-columns: 1fr;
  }
  
  .preview-card {
    margin: 0 16rpx;
  }
  
  .export-header {
    padding: 40rpx 24rpx 32rpx;
  }
}

