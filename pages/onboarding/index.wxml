<view class="container">
  <!-- 跳过按钮 -->
  <view class="skip-btn" bindtap="skipOnboarding">
    <text>跳过</text>
  </view>

  <!-- 轮播图区域 -->
  <swiper class="swiper" indicator-dots="{{false}}" autoplay="false" current="{{currentIndex}}" bindchange="onSwiperChange">
    <swiper-item wx:for="{{slides}}" wx:key="index">
      <view class="slide-content" style="background-color: {{item.bgColor}};">
        <view class="slide-icon">
          <text>{{item.icon}}</text>
        </view>
        <text class="slide-title">{{item.title}}</text>
        <text class="slide-description">{{item.description}}</text>
      </view>
    </swiper-item>
  </swiper>

  <!-- 指示器 -->
  <view class="indicators">
    <view class="indicator" wx:for="{{slides}}" wx:key="index" bindtap="onIndicatorTap" data-index="{{index}}">
      <view class="indicator-dot {{index === currentIndex ? 'active' : ''}}"></view>
    </view>
  </view>

  <!-- 开始按钮 -->
  <view class="start-btn-container" wx:if="{{showButton}}">
    <button class="start-btn" bindtap="goCreate">
      <text>开始使用</text>
    </button>
  </view>
</view>

