/* === 版本历史页面样式 === */

/* 导入全局CSS变量 */
page {
  --primary-gradient: linear-gradient(135deg, #8B5CF6 0%, #3B82F6 100%);
  --accent-color: #FF6B6B;
  --creative-blue: #4F46E5;
  --creative-purple: #8B5CF6;
  --creative-orange: #F59E0B;
  --creative-green: #10B981;
  --creative-red: #EF4444;
  --bg-light: #F8FAFC;
  --bg-card: #FFFFFF;
  --text-primary: #1F2937;
  --text-secondary: #6B7280;
  --border-light: #E5E7EB;
  --shadow-creative: 0 8rpx 32rpx rgba(139, 92, 246, 0.12);
  --shadow-card: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.versions-container {
  background: var(--bg-light);
  min-height: 100vh;
  padding-bottom: 40rpx;
}

/* === 页面头部 === */
.page-header {
  background: var(--bg-card);
  border-bottom: 1rpx solid var(--border-light);
  padding: 40rpx 32rpx 32rpx;
}

.header-content {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  background: var(--bg-light);
  border: 2rpx solid var(--border-light);
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: var(--text-primary);
  margin-right: 20rpx;
  transition: all 0.3s ease;
}

.back-btn:active {
  background: var(--creative-purple);
  color: white;
  border-color: var(--creative-purple);
}

.header-title {
  flex: 1;
}

.title-main {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 4rpx;
}

.title-sub {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* 当前版本信息 */
.current-version {
  background: linear-gradient(135deg, rgba(139, 92, 246, 0.1), rgba(59, 130, 246, 0.1));
  border-radius: 16rpx;
  padding: 20rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.version-badge.current {
  background: var(--creative-purple);
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 600;
}

.version-info {
  flex: 1;
}

.version-time {
  display: block;
  font-size: 26rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 4rpx;
}

.version-size {
  font-size: 22rpx;
  color: var(--text-secondary);
}

/* === 内容区域 === */
.content-area {
  padding: 32rpx;
}

/* === 加载状态 === */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid var(--border-light);
  border-top: 4rpx solid var(--creative-purple);
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 26rpx;
  color: var(--text-secondary);
}

/* === 空状态 === */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  text-align: center;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: var(--text-secondary);
}

/* === 版本列表 === */
.versions-list {
  position: relative;
}

.version-item {
  display: flex;
  margin-bottom: 32rpx;
  position: relative;
}

.version-item.current {
  margin-bottom: 40rpx;
}

.version-item.current::before {
  content: '当前版本';
  position: absolute;
  top: -20rpx;
  left: 60rpx;
  background: var(--creative-purple);
  color: white;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
  font-weight: 600;
}

/* 时间线 */
.timeline {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 20rpx;
}

.timeline-dot {
  width: 16rpx;
  height: 16rpx;
  background: var(--creative-purple);
  border-radius: 50%;
  border: 3rpx solid var(--bg-card);
  box-shadow: 0 0 0 2rpx var(--creative-purple);
  z-index: 2;
}

.version-item.current .timeline-dot {
  background: var(--creative-blue);
  box-shadow: 0 0 0 2rpx var(--creative-blue);
}

.timeline-line {
  flex: 1;
  width: 2rpx;
  background: var(--border-light);
  margin-top: 8rpx;
}

/* 版本内容 */
.version-content {
  flex: 1;
  background: var(--bg-card);
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: var(--shadow-card);
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.version-item.current .version-content {
  border-color: var(--creative-blue);
  box-shadow: var(--shadow-creative);
}

.version-content:active {
  transform: translateY(-2rpx);
  box-shadow: var(--shadow-creative);
}

/* 版本头信息 */
.version-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.version-meta {
  flex: 1;
}

.version-number {
  display: block;
  font-size: 28rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 4rpx;
}

.version-time {
  font-size: 22rpx;
  color: var(--text-secondary);
}

.cloud-tag {
  background: rgba(59, 130, 246, 0.1);
  border: 1rpx solid rgba(59, 130, 246, 0.2);
  border-radius: 8rpx;
  padding: 6rpx 12rpx;
  font-size: 20rpx;
  color: var(--creative-blue);
}

/* 版本详情 */
.version-details {
  margin-bottom: 20rpx;
}

.detail-row {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.detail-label {
  font-size: 22rpx;
  color: var(--text-secondary);
  min-width: 80rpx;
  margin-right: 12rpx;
}

.detail-value {
  font-size: 22rpx;
  color: var(--text-primary);
  font-weight: 500;
}

.detail-value.note {
  color: var(--creative-purple);
  font-weight: 600;
}

/* 操作按钮 */
.version-actions {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}

.action-btn {
  padding: 12rpx 20rpx;
  border-radius: 10rpx;
  font-size: 22rpx;
  font-weight: 600;
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
}

.action-btn.view {
  background: var(--bg-light);
  color: var(--text-secondary);
  border-color: var(--border-light);
}

.action-btn.restore {
  background: var(--creative-green);
  color: white;
  border-color: var(--creative-green);
}

.action-btn.download {
  background: var(--creative-blue);
  color: white;
  border-color: var(--creative-blue);
}

.action-btn:active {
  transform: translateY(2rpx);
  opacity: 0.8;
}

/* === 底部信息 === */
.footer-info {
  text-align: center;
  padding: 20rpx;
}

.footer-text {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* === 响应式设计 === */
@media (max-width: 750rpx) {
  .page-header {
    padding: 32rpx 24rpx 24rpx;
  }
  
  .content-area {
    padding: 24rpx;
  }
  
  .version-content {
    padding: 20rpx;
  }
  
  .version-actions {
    flex-direction: column;
    gap: 8rpx;
  }
  
  .action-btn {
    width: 100%;
    text-align: center;
  }
}

/* === 动画效果 === */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.version-item {
  animation: fadeInUp 0.3s ease-out;
}

.version-item:nth-child(odd) {
  animation-delay: 0.1s;
}

.version-item:nth-child(even) {
  animation-delay: 0.2s;
}