/* === 草稿管理页面样式 - 现代化设计 === */

/* 导入全局CSS变量 */
page {
  --primary-gradient: linear-gradient(135deg, #8B5CF6 0%, #3B82F6 100%);
  --accent-color: #FF6B6B;
  --creative-blue: #4F46E5;
  --creative-purple: #8B5CF6;
  --creative-orange: #F59E0B;
  --creative-green: #10B981;
  --creative-red: #EF4444;
  --bg-light: #F8FAFC;
  --bg-card: #FFFFFF;
  --text-primary: #1F2937;
  --text-secondary: #6B7280;
  --border-light: #E5E7EB;
  --shadow-creative: 0 8rpx 32rpx rgba(139, 92, 246, 0.12);
  --shadow-card: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.drafts-container {
  background: var(--bg-light);
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* === 搜索栏样式 === */
.search-bar {
  background: var(--bg-card);
  border-bottom: 1rpx solid var(--border-light);
  padding: 20rpx 32rpx;
  position: sticky;
  top: 0;
  z-index: 100;
  backdrop-filter: blur(20rpx);
}

.search-box {
  position: relative;
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.search-input {
  flex: 1;
  background: var(--bg-light);
  border: 2rpx solid var(--border-light);
  border-radius: 16rpx;
  padding: 20rpx 50rpx 20rpx 60rpx;
  font-size: 28rpx;
  color: var(--text-primary);
  transition: all 0.3s ease;
}

.search-input:focus {
  border-color: var(--creative-purple);
  box-shadow: 0 0 0 3rpx rgba(139, 92, 246, 0.1);
}

.search-icon {
  position: absolute;
  left: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 24rpx;
  color: var(--text-secondary);
}

.clear-btn {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 40rpx;
  height: 40rpx;
  background: var(--text-secondary);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: bold;
}

/* === 筛选排序栏 === */
.filter-sort-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.filter-group {
  display: flex;
  gap: 8rpx;
}

.filter-btn {
  padding: 12rpx 20rpx;
  background: var(--bg-light);
  border: 2rpx solid var(--border-light);
  border-radius: 12rpx;
  font-size: 24rpx;
  color: var(--text-secondary);
  transition: all 0.3s ease;
}

.filter-btn.active {
  background: var(--creative-purple);
  color: white;
  border-color: var(--creative-purple);
  box-shadow: var(--shadow-creative);
}

.sort-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 16rpx;
  background: var(--bg-light);
  border: 2rpx solid var(--border-light);
  border-radius: 12rpx;
  font-size: 24rpx;
  color: var(--text-secondary);
}

.sort-arrow {
  font-size: 16rpx;
  opacity: 0.7;
}

/* === 编辑模式工具栏 === */
.edit-toolbar {
  background: linear-gradient(135deg, var(--creative-purple), var(--creative-blue));
  color: white;
  padding: 20rpx 32rpx;
  margin: 0 32rpx 20rpx;
  border-radius: 16rpx;
  box-shadow: var(--shadow-creative);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.selected-count {
  font-size: 26rpx;
  font-weight: 600;
}

.edit-actions {
  display: flex;
  gap: 12rpx;
}

.edit-btn {
  padding: 12rpx 20rpx;
  background: rgba(255, 255, 255, 0.2);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 10rpx;
  font-size: 24rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.edit-btn.delete {
  background: rgba(255, 107, 107, 0.9);
  border-color: rgba(255, 107, 107, 0.9);
}

.edit-btn.upload {
  background: rgba(16, 185, 129, 0.9);
  border-color: rgba(16, 185, 129, 0.9);
}

.edit-btn:active {
  transform: translateY(2rpx);
  opacity: 0.8;
}

/* === 内容区域 === */
.content-area {
  padding: 32rpx;
}

/* === 加载状态 === */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid var(--border-light);
  border-top: 4rpx solid var(--creative-purple);
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 26rpx;
  color: var(--text-secondary);
}

/* === 空状态 === */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  text-align: center;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: var(--text-secondary);
  margin-bottom: 32rpx;
}

.empty-action {
  background: var(--primary-gradient);
  color: white;
  padding: 20rpx 40rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: var(--shadow-creative);
  transition: all 0.3s ease;
}

.empty-action:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(139, 92, 246, 0.3);
}

/* === 草稿网格布局 === */
.drafts-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(300rpx, 1fr));
  gap: 24rpx;
}

/* === 草稿卡片样式 === */
.draft-card {
  background: var(--bg-card);
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: var(--shadow-card);
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.draft-card:active {
  transform: translateY(-4rpx);
  box-shadow: var(--shadow-creative);
}

.draft-card.selected {
  border-color: var(--creative-purple);
  background: rgba(139, 92, 246, 0.05);
}

.draft-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: var(--primary-gradient);
  border-radius: 4rpx 4rpx 0 0;
}

/* 选择框 */
.select-checkbox {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  z-index: 10;
}

.checkbox {
  width: 36rpx;
  height: 36rpx;
  border: 2rpx solid var(--border-light);
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--bg-card);
  transition: all 0.3s ease;
}

.checkbox.checked {
  background: var(--creative-purple);
  border-color: var(--creative-purple);
  color: white;
}

/* 草稿缩略图 */
.draft-thumbnail {
  position: relative;
  width: 100%;
  height: 120rpx;
  background: linear-gradient(135deg, #f0f4ff, #f8faff);
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.thumbnail-content {
  display: flex;
  align-items: center;
  justify-content: center;
}

.draft-icon {
  font-size: 48rpx;
  opacity: 0.8;
}

.cloud-badge {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  width: 32rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.draft-status {
  position: absolute;
  bottom: 8rpx;
  left: 8rpx;
}

.status-badge {
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  font-weight: 600;
}

.status-badge.local {
  background: rgba(139, 92, 246, 0.1);
  color: var(--creative-purple);
}

.status-badge.cloud {
  background: rgba(59, 130, 246, 0.1);
  color: var(--creative-blue);
}

/* 草稿信息 */
.draft-info {
  flex: 1;
}

.draft-name {
  font-size: 28rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.draft-meta {
  display: flex;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.meta-item {
  font-size: 22rpx;
  color: var(--text-secondary);
}

.draft-note {
  font-size: 22rpx;
  color: var(--text-secondary);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 操作按钮 */
.draft-actions {
  position: absolute;
  bottom: 16rpx;
  right: 16rpx;
}

.action-btn {
  width: 40rpx;
  height: 40rpx;
  background: var(--bg-light);
  border: 2rpx solid var(--border-light);
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: var(--text-secondary);
  transition: all 0.3s ease;
}

.action-btn:active {
  background: var(--creative-purple);
  color: white;
  border-color: var(--creative-purple);
}

/* === 底部工具栏 === */
.bottom-toolbar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: var(--bg-card);
  border-top: 1rpx solid var(--border-light);
  padding: 20rpx 32rpx;
  backdrop-filter: blur(20rpx);
  z-index: 100;
}

.toolbar-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.stats-info {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.toolbar-right {
  display: flex;
  gap: 12rpx;
}

.toolbar-btn {
  padding: 16rpx 24rpx;
  border-radius: 12rpx;
  font-size: 26rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.toolbar-btn.edit-mode {
  background: var(--bg-light);
  color: var(--text-primary);
  border: 2rpx solid var(--border-light);
}

.toolbar-btn.new-draft {
  background: var(--primary-gradient);
  color: white;
  box-shadow: var(--shadow-creative);
}

.toolbar-btn:active {
  transform: translateY(2rpx);
}

.toolbar-btn.new-draft:active {
  box-shadow: 0 4rpx 16rpx rgba(139, 92, 246, 0.3);
}

/* === 排序菜单 === */
.sort-menu-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: flex-start;
  justify-content: flex-end;
  padding: 100rpx 32rpx 0;
}

.sort-menu {
  background: var(--bg-card);
  border-radius: 16rpx;
  box-shadow: var(--shadow-creative);
  min-width: 280rpx;
  overflow: hidden;
}

.menu-header {
  padding: 24rpx;
  background: var(--bg-light);
  border-bottom: 1rpx solid var(--border-light);
  font-size: 28rpx;
  font-weight: 700;
  color: var(--text-primary);
}

.menu-options {
  padding: 8rpx 0;
}

.menu-item {
  padding: 20rpx 24rpx;
  font-size: 26rpx;
  color: var(--text-primary);
  transition: all 0.3s ease;
}

.menu-item.active {
  background: rgba(139, 92, 246, 0.1);
  color: var(--creative-purple);
  font-weight: 600;
}

.menu-item:active {
  background: var(--bg-light);
}

/* === 响应式设计 === */
@media (max-width: 750rpx) {
  .drafts-grid {
    grid-template-columns: 1fr;
    gap: 20rpx;
  }
  
  .search-bar {
    padding: 16rpx 24rpx;
  }
  
  .content-area {
    padding: 24rpx;
  }
  
  .edit-toolbar {
    margin: 0 24rpx 16rpx;
    flex-direction: column;
    gap: 16rpx;
    align-items: stretch;
  }
  
  .edit-actions {
    justify-content: space-between;
  }
}

/* === 动画效果 === */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.draft-card {
  animation: fadeInUp 0.3s ease-out;
}