<view class="login-container">
  <!-- 头部区域 -->
  <view class="header">
    <view class="logo">
      <text class="logo-text">轻创图文</text>
      <text class="logo-subtitle">LightCreate Graphic</text>
    </view>
    <text class="welcome-text">欢迎回来</text>
  </view>

  <!-- 登录表单 -->
  <view class="form-container">
    <view class="form-header">
      <text class="form-title">账号登录</text>
      <text class="form-subtitle">使用手机号和密码登录</text>
    </view>
    <form bindsubmit="handleLogin">
      <!-- 手机号输入 -->
      <view class="form-group">
        <view class="input-container">
          <text class="input-label">手机号</text>
          <input 
            name="phone" 
            type="number" 
            placeholder="请输入手机号" 
            maxlength="11"
            value="{{formData.phone}}"
            bindinput="onPhoneInput"
            class="input-field"
          />
        </view>
      </view>

      <!-- 密码输入 -->
      <view class="form-group">
        <view class="input-container">
          <text class="input-label">密码</text>
          <input 
            name="password" 
            password="{{!showPassword}}" 
            placeholder="请输入密码"
            maxlength="20"
            value="{{formData.password}}"
            bindinput="onPasswordInput"
            class="input-field"
          />
          <view class="password-toggle" bindtap="togglePasswordVisibility">
            <text class="toggle-text">{{showPassword ? '隐藏' : '显示'}}</text>
          </view>
        </view>
      </view>

      <!-- 记住密码 -->
      <view class="remember-me">
        <checkbox-group bindchange="onRememberChange">
          <label class="checkbox-label">
            <checkbox value="remember" checked="{{formData.rememberMe}}" />
            <text class="checkbox-text">记住密码</text>
          </label>
        </checkbox-group>
        <text class="forgot-password" bindtap="navigateToForgotPassword">忘记密码</text>
      </view>

      <!-- 登录按钮 -->
      <button 
        formType="submit" 
        class="login-btn {{isLoading ? 'loading' : ''}}"
        disabled="{{!formData.phone || !formData.password || isLoading}}"
      >
        {{isLoading ? '登录中...' : '登录'}}
      </button>
    </form>

    <!-- 其他登录方式 -->
    <view class="divider">
      <text class="divider-text">或使用其他方式登录</text>
    </view>

    <!-- 游客登录 -->
    <button class="guest-login-btn" bindtap="handleGuestLogin">
      <image src="/images/guest-icon.png" class="guest-icon" />
      <text>游客体验</text>
    </button>

    <!-- 微信登录 -->
    <button class="wechat-login-btn" bindtap="handleWechatLogin">
      <image src="/images/wechat-icon.png" class="wechat-icon" />
      <text>微信一键登录</text>
    </button>

    <!-- 注册链接 -->
    <view class="register-link">
      <text>还没有账号？</text>
      <text class="register-text" bindtap="navigateToRegister">立即注册</text>
    </view>
  </view>

  <!-- 加载遮罩 -->
  <view wx:if="{{isLoading}}" class="loading-mask">
    <view class="loading-spinner"></view>
  </view>
</view>