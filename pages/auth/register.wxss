/* Register page styles (UTF-8, no BOM) */
.register-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #1677FF 0%, #36CFC9 100%);
  padding: 40rpx;
  display: flex;
  flex-direction: column;
}

.header { text-align: center; margin-bottom: 60rpx; }
.logo { margin-bottom: 30rpx; }
.logo-text { font-size: 48rpx; font-weight: bold; color: #fff; display: block; margin-bottom: 10rpx; }
.logo-subtitle { font-size: 24rpx; color: rgba(255,255,255,.8); display: block; }
.welcome-text { font-size: 36rpx; color: #fff; font-weight: 500; }

.form-container { background: #fff; border-radius: 20rpx; padding: 60rpx 40rpx; box-shadow: 0 10rpx 30rpx rgba(0,0,0,.1); }
.form-group { margin-bottom: 40rpx; }
.input-container { position: relative; }
.input-label { display: block; font-size: 28rpx; color: #333; margin-bottom: 20rpx; font-weight: 500; }
.input-field { width: 100%; height: 90rpx; border: 2rpx solid #e8e8e8; border-radius: 12rpx; padding: 0 30rpx; font-size: 28rpx; background: #fafafa; transition: all .3s; }
.input-field:focus { border-color: #1677FF; background: #fff; box-shadow: 0 0 0 4rpx rgba(22,119,255,.1); }

.password-toggle { position: absolute; right: 30rpx; top: 50%; transform: translateY(-50%); background: #f0f0f0; padding: 10rpx 20rpx; border-radius: 8rpx; font-size: 24rpx; color: #666; }

.agreement { margin-bottom: 40rpx; }
.agreement-label { display: flex; align-items: center; flex-wrap: wrap; }
.agreement-text { font-size: 26rpx; color: #666; }
.agreement-link { font-size: 26rpx; color: #1677FF; }

.register-btn { width: 100%; height: 90rpx; background: #1677FF; color: #fff; border: none; border-radius: 12rpx; font-size: 32rpx; font-weight: 500; transition: all .3s; }
.register-btn:active { background: #0e5fd9; transform: scale(.98); }
.register-btn.loading { background: #a0c5ff; }
.register-btn[disabled] { background: #ccc; color: #999; }

.login-link { text-align: center; font-size: 26rpx; color: #666; margin-top: 30rpx; }
.login-text { color: #1677FF; margin-left: 10rpx; font-weight: 500; }

.loading-mask { position: fixed; inset: 0; background: rgba(0,0,0,.5); display: flex; align-items: center; justify-content: center; z-index: 9999; }
.loading-spinner { width: 80rpx; height: 80rpx; border: 6rpx solid #fff; border-top: 6rpx solid #1677FF; border-radius: 50%; animation: spin 1s linear infinite; }
@keyframes spin { 0% { transform: rotate(0deg); } 100% { transform: rotate(360deg); } }

