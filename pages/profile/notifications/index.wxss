/* pages/profile/notifications/index.wxss */
.container {
  padding: 0;
  background-color: #f8f9fa;
  min-height: 100vh;
}

/* 导航栏 */
.nav-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: white;
  padding: 20rpx 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
  position: sticky;
  top: 0;
  z-index: 100;
}

.nav-back {
  display: flex;
  align-items: center;
  padding: 10rpx 0;
}

.nav-icon {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-right: 8rpx;
}

.nav-text {
  font-size: 28rpx;
  color: #666;
}

.nav-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  flex: 1;
}

.nav-placeholder {
  width: 100rpx;
}

/* 标题栏 */
.header {
  text-align: center;
  margin: 30rpx 20rpx;
  padding-top: 20rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

/* 过滤标签 */
.filter-tabs {
  display: flex;
  justify-content: space-around;
  margin-bottom: 30rpx;
  background: white;
  border-radius: 20rpx;
  padding: 15rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.filter-tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 15rpx;
  border-radius: 15rpx;
  font-size: 28rpx;
  color: #666;
  position: relative;
  transition: all 0.3s;
}

.filter-tab.active {
  background: #007bff;
  color: white;
  font-weight: bold;
}

.unread-badge {
  position: absolute;
  top: 10rpx;
  right: 20rpx;
  background: #dc3545;
  color: white;
  border-radius: 50%;
  width: 30rpx;
  height: 30rpx;
  font-size: 20rpx;
  line-height: 30rpx;
  text-align: center;
}

/* 操作栏 */
.action-bar {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.action-btn {
  flex: 1;
  margin: 0 10rpx;
  background: #28a745;
  color: white;
  border: none;
  border-radius: 25rpx;
  padding: 20rpx;
  font-size: 26rpx;
  font-weight: bold;
  transition: all 0.3s;
}

.action-btn.clear-btn {
  background: #dc3545;
}

.action-btn:active {
  transform: scale(0.95);
}

/* 通知列表 */
.notifications-list {
  margin-bottom: 40rpx;
}

.empty-state {
  text-align: center;
  padding: 100rpx 0;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.empty-desc {
  font-size: 24rpx;
  color: #666;
}

/* 通知项 */
.notification-item {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
  position: relative;
  transition: all 0.3s;
}

.notification-item.unread {
  border-left: 8rpx solid #007bff;
  background: #f8fbff;
}

.notification-item.important {
  border-right: 8rpx solid #ffc107;
}

.notification-item:active {
  transform: scale(0.98);
}

.notification-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.notification-type {
  padding: 8rpx 16rpx;
  border-radius: 15rpx;
  font-size: 22rpx;
  font-weight: bold;
  color: white;
}

.notification-type.system {
  background: #007bff;
}

.notification-type.template {
  background: #28a745;
}

.notification-type.security {
  background: #dc3545;
}

.notification-type.works {
  background: #6f42c1;
}

.notification-type.member {
  background: #fd7e14;
}

.notification-time {
  font-size: 22rpx;
  color: #999;
}

.notification-content {
  margin-bottom: 20rpx;
}

.notification-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.notification-body {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

.notification-actions {
  display: flex;
  justify-content: flex-end;
  gap: 15rpx;
}

.notification-actions .action-btn {
  flex: none;
  margin: 0;
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  border-radius: 20rpx;
}

.notification-actions .read-btn {
  background: #6c757d;
}

.notification-actions .delete-btn {
  background: #dc3545;
}

/* 标记指示器 */
.unread-indicator {
  position: absolute;
  top: 30rpx;
  left: 10rpx;
  width: 12rpx;
  height: 12rpx;
  background: #007bff;
  border-radius: 50%;
}

.important-indicator {
  position: absolute;
  top: 30rpx;
  right: 10rpx;
  width: 25rpx;
  height: 25rpx;
  background: #ffc107;
  color: #856404;
  border-radius: 50%;
  font-size: 18rpx;
  font-weight: bold;
  text-align: center;
  line-height: 25rpx;
}

/* 加载更多 */
.load-more {
  text-align: center;
  margin: 40rpx 0;
}

.load-more-btn {
  background: #6c757d;
  color: white;
  border: none;
  border-radius: 25rpx;
  padding: 20rpx 40rpx;
  font-size: 26rpx;
}

/* 加载状态 */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9999;
}

.loading-content {
  background: white;
  border-radius: 20rpx;
  padding: 60rpx 80rpx;
  text-align: center;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #007bff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 响应式适配 */
@media (max-width: 750rpx) {
  .filter-tabs {
    flex-wrap: wrap;
  }
  
  .filter-tab {
    flex: 0 0 33.33%;
    margin-bottom: 10rpx;
  }
  
  .notification-header {
    flex-direction: column;
    align-items: flex-start;
  }
  
  .notification-time {
    margin-top: 10rpx;
  }
  
  .notification-actions {
    flex-direction: column;
  }
  
  .notification-actions .action-btn {
    width: 100%;
  }
}