/* === 个人资料页面 - 专业用户中心风格 === */

.container {
  padding: 0;
  background: var(--bg-light);
  min-height: 100vh;
}

/* 用户头部信息 */
.profile-header {
  background: var(--primary-gradient);
  padding: 60rpx 32rpx 40rpx;
  color: white;
  position: relative;
  overflow: hidden;
}

.profile-header::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="20" cy="20" r="1" fill="white" opacity="0.1"/><circle cx="80" cy="40" r="1" fill="white" opacity="0.1"/><circle cx="40" cy="80" r="1" fill="white" opacity="0.1"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
  opacity: 0.3;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 24rpx;
  position: relative;
  z-index: 2;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.3);
}

.user-details {
  flex: 1;
}

.user-name {
  font-size: 32rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
}

.user-id {
  font-size: 24rpx;
  opacity: 0.9;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  position: relative;
  z-index: 2;
}

.stat-item {
  text-align: center;
}

.stat-number {
  font-size: 32rpx;
  font-weight: 700;
  margin-bottom: 4rpx;
}

.stat-label {
  font-size: 22rpx;
  opacity: 0.9;
}

/* 内容区域 */
.content-section {
  padding: 32rpx;
}

/* 卡片样式 */
.profile-card {
  background: var(--bg-card);
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: var(--shadow-card);
  border: 1rpx solid var(--border-light);
  margin-bottom: 24rpx;
  position: relative;
  overflow: hidden;
}

.profile-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: var(--primary-gradient);
  border-radius: 4rpx 4rpx 0 0;
}

.card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 28rpx;
  font-weight: 700;
  color: var(--text-primary);
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.card-icon {
  font-size: 24rpx;
  color: var(--creative-purple);
}

.card-action {
  font-size: 24rpx;
  color: var(--creative-blue);
  font-weight: 600;
}

/* 草稿列表 */
.draft-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.draft-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx;
  background: var(--bg-light);
  border-radius: 12rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.draft-item:active {
  border-color: var(--creative-blue);
  transform: translateX(4rpx);
}

.draft-icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: 12rpx;
  background: var(--primary-gradient);
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 20rpx;
}

.draft-info {
  flex: 1;
}

.draft-name {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 4rpx;
}

.draft-meta {
  font-size: 22rpx;
  color: var(--text-secondary);
}

.draft-actions {
  display: flex;
  gap: 8rpx;
}

.action-btn {
  padding: 8rpx 16rpx;
  background: var(--bg-light);
  border: 1rpx solid var(--border-light);
  border-radius: 8rpx;
  font-size: 20rpx;
  color: var(--text-secondary);
  transition: all 0.3s ease;
}

.action-btn:active {
  background: var(--creative-blue);
  color: white;
  border-color: var(--creative-blue);
}

/* 空状态 */
.empty-state {
  padding: 40rpx 0;
  text-align: center;
}

.empty-icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* 关于信息 */
.about-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.about-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.about-icon {
  font-size: 20rpx;
  color: var(--creative-blue);
}

.about-text {
  font-size: 24rpx;
  color: var(--text-primary);
}

.about-desc {
  font-size: 22rpx;
  color: var(--text-secondary);
  line-height: 1.5;
}

/* 云端作品 */
.cloud-works {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.cloud-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx;
  background: var(--bg-light);
  border-radius: 12rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.cloud-item:active {
  border-color: var(--creative-green);
  transform: translateX(4rpx);
}

.cloud-icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: var(--creative-green);
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 20rpx;
}

.cloud-info {
  flex: 1;
}

.cloud-name {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 4rpx;
}

.cloud-type {
  font-size: 22rpx;
  color: var(--text-secondary);
  background: rgba(16, 185, 129, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  display: inline-block;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .profile-header {
    padding: 40rpx 24rpx 32rpx;
  }
  
  .content-section {
    padding: 24rpx;
  }
  
  .stats-grid {
    grid-template-columns: 1fr;
    gap: 16rpx;
  }
  
  .draft-item, .cloud-item {
    padding: 16rpx;
  }
}
