/* pages/profile/privacy/index.wxss */
.container {
  padding: 0;
  background-color: #f8f9fa;
  min-height: 100vh;
}

/* 导航栏 */
.nav-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: white;
  padding: 20rpx 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
  position: sticky;
  top: 0;
  z-index: 100;
}

.nav-back {
  display: flex;
  align-items: center;
  padding: 10rpx 0;
}

.nav-icon {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-right: 8rpx;
}

.nav-text {
  font-size: 28rpx;
  color: #666;
}

.nav-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  flex: 1;
}

.nav-placeholder {
  width: 100rpx;
}

/* 标题栏 */
.header {
  text-align: center;
  margin: 30rpx 20rpx;
  padding-top: 20rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

/* 保存状态指示器 */
.saved-indicator {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #d4edda;
  color: #155724;
  border-radius: 15rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  font-size: 26rpx;
  font-weight: bold;
}

.saved-icon {
  margin-right: 10rpx;
  font-size: 30rpx;
}

/* 设置区域 */
.settings-section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 25rpx;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

/* 设置项 */
.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-info {
  flex: 1;
  margin-right: 20rpx;
}

.setting-label {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.setting-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

/* 开关样式 */
switch {
  transform: scale(0.8);
  transform-origin: center right;
}

/* 操作项 */
.action-item {
  display: flex;
  align-items: center;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.3s;
}

.action-item:last-child {
  border-bottom: none;
}

.action-item:active {
  background-color: #f8f9fa;
  border-radius: 15rpx;
}

.action-item.danger {
  color: #dc3545;
}

.action-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
  width: 50rpx;
  text-align: center;
}

.action-content {
  flex: 1;
}

.action-label {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 5rpx;
}

.action-desc {
  font-size: 24rpx;
  color: #666;
}

.action-arrow {
  font-size: 36rpx;
  color: #999;
  margin-left: 10rpx;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
  margin-top: 40rpx;
}

.primary-btn {
  flex: 1;
  background: #007bff;
  color: white;
  border: none;
  border-radius: 25rpx;
  padding: 25rpx;
  font-size: 28rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 15rpx rgba(0, 123, 255, 0.3);
}

.primary-btn:active {
  background: #0056b3;
  transform: translateY(2rpx);
}

.secondary-btn {
  flex: 1;
  background: #6c757d;
  color: white;
  border: none;
  border-radius: 25rpx;
  padding: 25rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.secondary-btn:active {
  background: #545b62;
  transform: translateY(2rpx);
}

/* 加载状态 */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9999;
}

.loading-content {
  background: white;
  border-radius: 20rpx;
  padding: 60rpx 80rpx;
  text-align: center;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #007bff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 响应式适配 */
@media (max-width: 750rpx) {
  .action-buttons {
    flex-direction: column;
  }
  
  .setting-item {
    flex-direction: column;
    align-items: flex-start;
  }
  
  .setting-info {
    margin-right: 0;
    margin-bottom: 15rpx;
  }
  
  switch {
    align-self: flex-end;
  }
  
  .action-item {
    padding: 20rpx 0;
  }
  
  .action-icon {
    font-size: 35rpx;
    margin-right: 15rpx;
  }
}