/* === 模板库 - 专业设计风格 === */

.template-container {
  background: var(--bg-light);
  min-height: 100vh;
}

/* 筛选区域 */
.filter-section {
  background: var(--bg-card);
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid var(--border-light);
}

.filter-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.filter-title {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-primary);
}

.filter-actions {
  display: flex;
  gap: 20rpx;
}

.filter-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 16rpx;
  background: var(--bg-light);
  border-radius: 12rpx;
  border: 1rpx solid var(--border-light);
  transition: all 0.3s ease;
}

.filter-btn:active {
  background: var(--creative-blue);
  color: white;
}

.filter-icon {
  font-size: 24rpx;
}

.filter-text {
  font-size: 24rpx;
  font-weight: 600;
}

/* 激活的筛选条件 */
.active-filters {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.filter-label {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.filter-chips {
  display: flex;
  gap: 12rpx;
}

.filter-chip {
  display: flex;
  align-items: center;
  gap: 8rpx;
  background: var(--creative-blue);
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
}

.chip-text {
  font-weight: 600;
}

.chip-close {
  font-size: 28rpx;
  font-weight: 700;
  cursor: pointer;
}

/* 模板网格 */
.template-grid {
  padding: 24rpx;
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.template-card {
  overflow: hidden;
  border-radius: 16rpx;
  transition: all 0.3s ease;
  position: relative;
}

.template-card:active {
  transform: translateY(-4rpx);
  box-shadow: var(--shadow-creative);
}

/* 模板预览区域 */
.template-preview {
  height: 200rpx;
  position: relative;
  overflow: hidden;
}

.template-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(to bottom, rgba(0,0,0,0.2), rgba(0,0,0,0.6));
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

.template-name {
  font-size: 28rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 8rpx;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.5);
}

.template-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.template-badge {
  background: rgba(255,255,255,0.9);
  color: var(--text-primary);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 600;
}

.template-actions {
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.action-icon {
  font-size: 20rpx;
  color: rgba(255,255,255,0.9);
}

.action-count {
  font-size: 20rpx;
  color: rgba(255,255,255,0.9);
}

/* 模板信息区域 */
.template-info {
  padding: 20rpx;
}

.template-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.template-title {
  font-size: 26rpx;
  font-weight: 700;
  color: var(--text-primary);
}

.template-rating {
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.rating-icon {
  font-size: 20rpx;
}

.rating-value {
  font-size: 20rpx;
  color: var(--text-secondary);
}

.template-desc {
  font-size: 22rpx;
  color: var(--text-secondary);
  line-height: 1.4;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.template-footer {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.template-stats {
  display: flex;
  gap: 16rpx;
}

.stat-item {
  font-size: 20rpx;
  color: var(--text-secondary);
}

.template-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.template-tag {
  background: var(--bg-light);
  color: var(--text-secondary);
  padding: 4rpx 10rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
}

/* 使用按钮区域 */
.template-cta {
  padding: 0 20rpx 20rpx;
}

.use-btn {
  width: 100%;
  padding: 16rpx;
  font-size: 24rpx;
  font-weight: 600;
}

/* 空状态 */
.empty-state {
  padding: 120rpx 32rpx;
  text-align: center;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.empty-title {
  font-size: 28rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-bottom: 32rpx;
}

/* 加载更多 */
.load-more {
  padding: 32rpx;
  text-align: center;
}

.load-btn {
  padding: 20rpx 40rpx;
  font-size: 24rpx;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .template-grid {
    grid-template-columns: 1fr;
  }
  
  .filter-actions {
    flex-direction: column;
    gap: 12rpx;
  }
}

