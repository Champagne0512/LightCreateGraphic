/* === 模板中心 - 专业设计风格 === */

.container {
  padding: 0;
  background: var(--bg-light);
  min-height: 100vh;
  position: relative;
}

/* 搜索区域 */
.search-section {
  background: var(--bg-card);
  border-bottom: 1rpx solid var(--border-light);
  position: sticky;
  top: 0;
  z-index: 100;
}

.search-container {
  padding: 32rpx;
}

/* 搜索框样式 */
.search-input-wrapper {
  position: relative;
  display: flex;
  align-items: center;
  background: var(--bg-light);
  border-radius: 20rpx;
  border: 2rpx solid var(--border-color);
  transition: all 0.3s ease;
  overflow: hidden;
  margin-bottom: 24rpx;
}

.search-input-wrapper:focus-within {
  border-color: var(--primary-color);
  box-shadow: 0 0 0 4rpx rgba(99, 102, 241, 0.1);
  background: white;
}

.search-icon {
  position: absolute;
  left: 28rpx;
  font-size: 32rpx;
  color: var(--text-muted);
  z-index: 2;
}

.search-input {
  flex: 1;
  background: transparent;
  border: none;
  border-radius: 20rpx;
  padding: 28rpx 28rpx 28rpx 80rpx;
  font-size: 30rpx;
  transition: all 0.3s ease;
  height: 96rpx;
  box-sizing: border-box;
}

.search-input::placeholder {
  color: var(--text-muted);
}

.clear-btn {
  background: var(--text-muted);
  color: white;
  border: none;
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
  font-size: 24rpx;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 快捷筛选标签 */
.quick-filters {
  margin-top: 16rpx;
}

.filters-scroll {
  white-space: nowrap;
}

.filters-list {
  display: inline-flex;
  gap: 16rpx;
  padding: 8rpx 0;
}

.filter-tag {
  background: var(--bg-light);
  color: var(--text-secondary);
  border: 2rpx solid var(--border-color);
  border-radius: 20rpx;
  padding: 16rpx 24rpx;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  transition: all 0.3s ease;
  white-space: nowrap;
}

.filter-tag.active {
  background: var(--primary-color);
  color: white;
  border-color: var(--primary-color);
}

.filter-icon {
  font-size: 24rpx;
}

.filter-text {
  font-weight: 500;
}

/* 筛选面板 */
.filter-panel {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  flex-direction: column;
  transform: translateY(100%);
  transition: transform 0.3s ease;
}

.filter-panel.show {
  transform: translateY(0);
}

.filter-header {
  background: var(--bg-card);
  padding: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid var(--border-light);
}

.filter-title {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-primary);
}

.close-filter {
  background: var(--bg-light);
  border: none;
  border-radius: 50%;
  width: 60rpx;
  height: 60rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.filter-content {
  flex: 1;
  background: var(--bg-card);
  padding: 32rpx;
  overflow-y: auto;
}

.filter-group {
  margin-bottom: 48rpx;
}

.group-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 24rpx;
  display: block;
}

.category-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.category-item {
  background: var(--bg-light);
  border: 2rpx solid var(--border-color);
  border-radius: 16rpx;
  padding: 24rpx 16rpx;
  text-align: center;
  transition: all 0.3s ease;
}

.category-item.active {
  background: var(--primary-color);
  color: white;
  border-color: var(--primary-color);
}

.category-icon {
  font-size: 32rpx;
  display: block;
  margin-bottom: 8rpx;
}

.category-name {
  font-size: 24rpx;
  font-weight: 500;
}

.usage-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.usage-item {
  background: var(--bg-light);
  border: 2rpx solid var(--border-color);
  border-radius: 12rpx;
  padding: 20rpx;
  text-align: center;
  transition: all 0.3s ease;
}

.usage-item.active {
  background: var(--primary-color);
  color: white;
  border-color: var(--primary-color);
}

.usage-text {
  font-size: 26rpx;
  font-weight: 500;
}

.sort-options {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.sort-option {
  background: var(--bg-light);
  border: 2rpx solid var(--border-color);
  border-radius: 12rpx;
  padding: 24rpx;
  transition: all 0.3s ease;
}

.sort-option.active {
  background: var(--primary-color);
  color: white;
  border-color: var(--primary-color);
}

.sort-text {
  font-size: 28rpx;
  font-weight: 500;
}

.filter-actions {
  background: var(--bg-card);
  padding: 32rpx;
  border-top: 1rpx solid var(--border-light);
  display: flex;
  gap: 24rpx;
}

.reset-btn, .apply-btn {
  flex: 1;
  border: none;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  font-weight: 600;
}

.reset-btn {
  background: var(--bg-light);
  color: var(--text-secondary);
}

.apply-btn {
  background: var(--primary-color);
  color: white;
}

/* 热门推荐专区 */
.featured-section {
  padding: 32rpx;
  background: var(--bg-card);
  margin: 24rpx;
  border-radius: 24rpx;
  box-shadow: var(--shadow-card);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-primary);
}

.title-badge {
  background: var(--accent-color);
  color: white;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 600;
}

.title-count {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-left: 12rpx;
}

.section-more {
  display: flex;
  align-items: center;
  gap: 8rpx;
  color: var(--primary-color);
}

.more-text {
  font-size: 26rpx;
  font-weight: 500;
}

.more-icon {
  font-size: 24rpx;
}

.featured-scroll {
  white-space: nowrap;
}

.featured-list {
  display: inline-flex;
  gap: 24rpx;
}

.featured-item {
  width: 280rpx;
  background: var(--bg-light);
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: var(--shadow-sm);
  transition: all 0.3s ease;
  position: relative;
}

.featured-item:active {
  transform: translateY(-4rpx);
  box-shadow: var(--shadow-md);
}

.featured-badge {
  position: absolute;
  top: 12rpx;
  left: 12rpx;
  background: var(--accent-color);
  color: white;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 600;
  z-index: 10;
}

.featured-image {
  height: 160rpx;
  position: relative;
}

.template-img {
  width: 100%;
  height: 100%;
}

.image-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.7);
  padding: 12rpx;
}

.use-count {
  color: white;
  font-size: 20rpx;
}

.featured-info {
  padding: 20rpx;
}

.template-name {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--text-primary);
  display: block;
  margin-bottom: 8rpx;
}

.template-desc {
  font-size: 22rpx;
  color: var(--text-secondary);
  display: block;
  margin-bottom: 12rpx;
}

.template-stats {
  display: flex;
  gap: 16rpx;
}

.stat-item {
  font-size: 20rpx;
  color: var(--text-muted);
}

/* 模板展示区域 */
.templates-section {
  padding: 0 32rpx 32rpx;
}

.view-toggle {
  display: flex;
  background: var(--bg-light);
  border-radius: 12rpx;
  padding: 4rpx;
}

.view-option {
  flex: 1;
  text-align: center;
  padding: 12rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.view-option.active {
  background: var(--primary-color);
  color: white;
}

/* 网格视图 */
.templates-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  margin-top: 24rpx;
}

.template-card {
  background: var(--bg-card);
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: var(--shadow-sm);
  transition: all 0.3s ease;
}

.template-card:active {
  transform: translateY(-4rpx);
  box-shadow: var(--shadow-md);
}

.card-image {
  height: 200rpx;
  position: relative;
}

.card-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.template-card:active .card-overlay {
  opacity: 1;
}

.use-btn {
  color: white;
  font-size: 28rpx;
  font-weight: 600;
}

.card-info {
  padding: 20rpx;
}

.template-category {
  font-size: 22rpx;
  color: var(--text-secondary);
  display: block;
  margin-bottom: 8rpx;
}

/* 列表视图 */
.templates-list {
  margin-top: 24rpx;
}

.template-item {
  background: var(--bg-card);
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 16rpx;
  box-shadow: var(--shadow-sm);
  transition: all 0.3s ease;
}

.template-item:active {
  transform: translateY(-2rpx);
  box-shadow: var(--shadow-md);
}

.item-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  overflow: hidden;
  flex-shrink: 0;
}

.item-info {
  flex: 1;
}

.item-stats {
  display: flex;
  gap: 16rpx;
  margin-top: 8rpx;
}

.item-action {
  flex-shrink: 0;
}

/* 加载更多 */
.load-more {
  text-align: center;
  margin-top: 32rpx;
}

.load-btn {
  background: var(--primary-color);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  font-weight: 600;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 32rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 12rpx;
  display: block;
}

.empty-desc {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-bottom: 32rpx;
  display: block;
}

.empty-btn {
  background: var(--primary-color);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 20rpx 32rpx;
  font-size: 28rpx;
  font-weight: 600;
}

/* 悬浮按钮 */
.floating-actions {
  position: fixed;
  right: 32rpx;
  bottom: 120rpx;
  z-index: 99;
}

.filter-btn {
  background: var(--primary-color);
  color: white;
  border: none;
  border-radius: 30rpx;
  padding: 20rpx 24rpx;
  font-size: 26rpx;
  font-weight: 600;
  box-shadow: var(--shadow-creative);
  display: flex;
  align-items: center;
  gap: 8rpx;
}

/* 加载状态 */
.loading-state {
  text-align: center;
  padding: 80rpx 32rpx;
}

.loading-icon {
  font-size: 60rpx;
  margin-bottom: 16rpx;
}

.loading-text {
  font-size: 26rpx;
  color: var(--text-secondary);
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .templates-grid {
    grid-template-columns: 1fr;
    gap: 20rpx;
  }
  
  .category-grid {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .featured-item {
    width: 240rpx;
  }
  
  .template-item {
    flex-direction: column;
    text-align: center;
  }
  
  .item-info {
    text-align: center;
  }
  
  .item-stats {
    justify-content: center;
  }
}

/* 动画效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.template-card, .template-item {
  animation: fadeIn 0.5s ease-out;
}