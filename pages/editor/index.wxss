/* 工具栏 */
.toolbar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: var(--bg-card);
  border-top: 1rpx solid var(--border-light);
  padding: 20rpx 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  backdrop-filter: blur(20rpx);
  z-index: 100;
}

.toolbar-group {
  display: flex;
  gap: 16rpx;
  align-items: center;
}

.tool-btn {
  background: var(--bg-light);
  border: 2rpx solid var(--border-light);
  border-radius: 12rpx;
  padding: 16rpx 20rpx;
  font-size: 24rpx;
  font-weight: 600;
  color: var(--text-primary);
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.tool-btn:active {
  background: var(--creative-blue);
  color: white;
  border-color: var(--creative-blue);
  transform: translateY(-2rpx);
}

.tool-btn.active {
  background: var(--creative-purple);
  color: white;
  border-color: var(--creative-purple);
  box-shadow: 0 4rpx 16rpx rgba(139, 92, 246, 0.3);
}

.tool-btn.active {
  background: var(--creative-purple);
  color: white;
  border-color: var(--creative-purple);
  box-shadow: 0 4rpx 16rpx rgba(139, 92, 246, 0.3);
}

.tool-btn.primary {
  background: var(--primary-gradient);
  color: white;
  border: none;
  box-shadow: var(--shadow-creative);
}

.tool-btn.primary:active {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 16rpx rgba(139, 92, 246, 0.3);
}

/* 属性面板 */
.property-panel {
  position: fixed;
  right: 32rpx;
  top: 50%;
  transform: translateY(-50%);
  background: var(--bg-card);
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: var(--shadow-creative);
  border: 1rpx solid var(--border-light);
  min-width: 300rpx;
  z-index: 90;
}

.panel-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid var(--border-light);
}

.panel-icon {
  font-size: 24rpx;
  color: var(--creative-purple);
}

.panel-title {
  font-size: 26rpx;
  font-weight: 700;
  color: var(--text-primary);
}

.property-section {
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 22rpx;
  font-weight: 600;
  color: var(--text-secondary);
  margin-bottom: 12rpx;
}

.property-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.property-label {
  font-size: 22rpx;
  color: var(--text-secondary);
  min-width: 80rpx;
}

.property-input {
  flex: 1;
  background: var(--bg-light);
  border: 2rpx solid var(--border-light);
  border-radius: 12rpx;
  padding: 12rpx 16rpx;
  font-size: 22rpx;
  transition: all 0.3s ease;
}

.property-input:focus {
  border-color: var(--creative-blue);
  box-shadow: 0 0 0 3rpx rgba(79, 70, 229, 0.1);
}

.color-palette {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}

.color-chip {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 3rpx solid transparent;
  transition: all 0.3s ease;
  position: relative;
}

.color-chip:active {
  transform: scale(1.1);
  border-color: var(--creative-purple);
}

.color-chip::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 8rpx;
  height: 8rpx;
  background: white;
  border-radius: 50%;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.color-chip.active::after {
  opacity: 1;
}

/* 滑块样式 */
.slider-container {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.slider-value {
  font-size: 20rpx;
  color: var(--text-secondary);
  min-width: 60rpx;
}

/* 操作按钮组 */
.action-buttons {
  display: flex;
  gap: 12rpx;
  margin-top: 20rpx;
}

.action-btn {
  flex: 1;
  background: var(--bg-light);
  border: 2rpx solid var(--border-light);
  border-radius: 12rpx;
  padding: 12rpx;
  font-size: 22rpx;
  font-weight: 600;
  color: var(--text-secondary);
  transition: all 0.3s ease;
}

.action-btn:active {
  background: var(--creative-blue);
  color: white;
  border-color: var(--creative-blue);
}

/* 导出面板 */
.export-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.export-panel {
  background: var(--bg-card);
  border-radius: 24rpx;
  padding: 32rpx;
  width: 600rpx;
  max-width: 90vw;
  box-shadow: var(--shadow-creative);
  animation: panelSlideIn 0.3s ease;
}

@keyframes panelSlideIn {
  from {
    opacity: 0;
    transform: translateY(20rpx) scale(0.95);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

.export-header {
  text-align: center;
  margin-bottom: 24rpx;
}

.export-title {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.export-subtitle {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.export-options {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 32rpx;
}

.option-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.option-label {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.option-controls {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.option-radio {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.option-switch {
  transform: scale(1.2);
}

.export-actions {
  display: flex;
  gap: 16rpx;
  justify-content: flex-end;
}

/* 辅助线 */
.guide.v {
  position: absolute;
  top: 0;
  bottom: 0;
  width: 2rpx;
  background: var(--accent-color);
  opacity: 0.6;
  z-index: 5;
}

.guide.h {
  position: absolute;
  left: 0;
  right: 0;
  height: 2rpx;
  background: var(--accent-color);
  opacity: 0.6;
  z-index: 5;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .property-panel {
    position: fixed;
    left: 32rpx;
    right: 32rpx;
    top: auto;
    bottom: 120rpx;
    transform: none;
  }
  
  .toolbar {
    flex-direction: column;
    gap: 16rpx;
    padding: 20rpx;
  }
  
  .toolbar-group {
    width: 100%;
    justify-content: space-between;
  }
}
