/* === 编辑器 - 专业设计工具风格 === */

.editor-container {
  padding: 0;
  background: var(--bg-light);
  min-height: 100vh;
  position: relative;
}

/* 画布区域 */
.canvas-wrap {
  margin: 32rpx auto;
  position: relative;
  overflow: hidden;
  box-shadow: var(--shadow-creative);
  border-radius: 20rpx;
  border: 1rpx solid var(--border-light);
}

.canvas-wrap::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: 
    linear-gradient(rgba(139, 92, 246, 0.02) 0 0),
    linear-gradient(90deg, rgba(0,0,0,.08) 1px, transparent 0),
    linear-gradient(rgba(0,0,0,.08) 1px, transparent 0);
  background-size: 100% 100%, 40rpx 40rpx, 40rpx 40rpx;
  background-position: 0 0, 0 0, 0 0;
  border-radius: 20rpx;
}

/* 可移动元素 */
.mv-el {
  box-sizing: border-box;
  transition: all 0.2s ease;
  border-radius: 8rpx;
}

.mv-el.sel {
  outline: 3rpx solid var(--creative-purple);
  box-shadow: 0 0 0 3rpx rgba(139, 92, 246, 0.2);
}

.mv-el:active {
  transform: scale(0.98);
}

/* 画笔工具栏 */
.brush-toolbar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 120rpx;
  background: var(--bg-card);
  border-top: 1rpx solid var(--border-light);
  border-bottom: 1rpx solid var(--border-light);
  padding: 20rpx 32rpx;
  backdrop-filter: blur(20rpx);
  z-index: 99;
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.brush-controls {
  display: flex;
  align-items: center;
  gap: 24rpx;
  justify-content: space-between;
}

.brush-size, .brush-color {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.brush-label {
  font-size: 22rpx;
  color: var(--text-secondary);
  font-weight: 600;
  min-width: 60rpx;
}

.brush-value {
  font-size: 20rpx;
  color: var(--text-secondary);
  min-width: 40rpx;
}

.brush-action-btn {
  background: var(--bg-light);
  border: 2rpx solid var(--border-light);
  border-radius: 12rpx;
  padding: 12rpx 20rpx;
  font-size: 22rpx;
  font-weight: 600;
  color: var(--text-secondary);
  transition: all 0.3s ease;
}

.brush-action-btn:active {
  background: var(--creative-red);
  color: white;
  border-color: var(--creative-red);
}

